<h1>New Bulk Discount</h1>
<%= form_with model: @discount, url: merchant_merchant_bulk_discounts_path, local: true do |f| %>
  <%= f.label :item_quantity, "Minimum Quantity" %><br>
  <%= f.number_field :item_quantity %><br><br>

  <%= f.label :percentage, "Percent off (ex: input 5 for 5% off)" %><br>
  <%= f.number_field :percentage %><br><br>

  <%= f.submit %>
<% end %>
